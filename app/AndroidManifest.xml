<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.jarofgreen.ymtimers"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <application
        android:name="uk.co.jarofgreen.ymtimers.OurApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.co.jarofgreen.ymtimers.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.jarofgreen.ymtimers.ui.NewTimerActivity"
            android:label="@string/title_activity_new_timer" 
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="uk.co.jarofgreen.ymtimers.ui.TimerActivity"
            android:label="@string/title_activity_timer"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="uk.co.jarofgreen.ymtimers.ui.TimerChooseIconActivity"
            android:label="@string/title_activity_timer"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="uk.co.jarofgreen.ymtimers.ui.EnterNumberActivity"
            android:label="@string/title_activity_timer"
            android:screenOrientation="landscape">
        </activity>
        <service
            android:name="uk.co.jarofgreen.ymtimers.AlarmService"
            android:exported="false" >
        </service>
    </application>

</manifest>
